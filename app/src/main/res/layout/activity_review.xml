<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sun.amy.activity.ReviewActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            tools:text="Unit 5 Zoo Animals"
            android:text="Unit 5 Zoo Animals"
            android:textSize="24sp"
            android:gravity="center_vertical|left"
            android:layout_width="wrap_content"
            android:layout_height="48dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <SurfaceView
                android:background="@color/light_grey"
                android:layout_width="match_parent"
                android:layout_height="256dp" />

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_play"
                android:layout_width="48dp"
                android:layout_height="48dp" />

        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_position"
                tools:text="00:00:36"
                android:text="00:00:36"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_margin="4dp"
                android:layout_gravity="left|center_vertical"
                android:layout_width="56dp"
                android:layout_height="wrap_content" />

            <SeekBar
                android:id="@+id/progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:progress="0"
                android:progressDrawable="@drawable/progressbar"
                tools:progress="50" />

            <TextView
                android:id="@+id/tv_duration"
                tools:text="00:01:12"
                android:text="00:01:12"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_margin="4dp"
                android:layout_gravity="right|center_vertical"
                android:layout_width="56dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="@string/do_homework"
            android:textSize="24sp"
            android:textColor="@color/light_sea_green"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="56dp" />

    </LinearLayout>

</FrameLayout>
