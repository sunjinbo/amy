<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/grey"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <ImageView
            android:id="@+id/iv_figure"
            tools:src="@drawable/ic_family"
            android:layout_gravity="center"
            android:layout_width="196dp"
            android:layout_height="196dp" />

        <TextView
            android:id="@+id/tv_word"
            tools:text="family"
            android:textSize="28sp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/words_layout"
        android:background="@color/light_grey"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_forget"
            android:onClick="onForgetClick"
            android:text="@string/forget"
            android:textSize="24sp"
            android:textColor="@color/indian_red"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp" />

        <Button
            android:id="@+id/btn_know"
            android:onClick="onKnowClick"
            android:text="@string/know"
            android:textSize="24sp"
            android:textColor="@color/light_sea_green"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp" />

    </LinearLayout>

</LinearLayout>