<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/grey"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="240dp">

            <ImageView
                android:id="@+id/iv_figure"
                tools:src="@drawable/ic_family"
                android:layout_gravity="center"
                android:layout_width="172dp"
                android:layout_height="172dp" />

            <TextView
                android:id="@+id/tv_word"
                tools:text="family"
                android:textSize="28sp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_sequence_number"
            tools:text="6/12"
            android:text="0/0"
            android:textSize="14sp"
            android:textColor="@color/blue"
            android:gravity="center_vertical|center"
            android:layout_alignParentRight="true"
            android:layout_margin="1dp"
            android:layout_width="56dp"
            android:layout_height="48dp" />

        <LinearLayout
            android:id="@+id/ly_add_dict"
            android:orientation="horizontal"
            android:gravity="center_vertical|center"
            android:layout_alignParentLeft="true"
            android:layout_margin="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_add_dict"
                android:layout_width="22dp"
                android:layout_height="22dp" />

            <TextView
                android:text="@string/add_dict"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:singleLine="true"
                android:gravity="center_vertical|left"
                android:layout_alignParentRight="true"
                android:layout_width="100dp"
                android:layout_height="48dp" />
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/words_layout"
        android:background="@color/light_grey"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_previous"
            android:text="@string/previous"
            android:textSize="24sp"
            android:textColor="@color/indian_red"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp" />

        <Button
            android:id="@+id/btn_next"
            android:text="@string/next"
            android:textSize="24sp"
            android:textColor="@color/light_sea_green"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp" />

    </LinearLayout>

</LinearLayout>